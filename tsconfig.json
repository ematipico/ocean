{
  "exclude": ["node_modules", "**/lib/**/*", "**/__tests__/**/*"],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6", "es2017"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@ocean/*": ["node_modules/@ocean/*/src"]
    },
    "composite": true,
    "declaration": true
  },
  "references": [
    { "path": "packages/aws-provider" },
    { "path": "packages/cli" },
    { "path": "packages/core" },
    { "path": "packages/nuxtjs-adapter" },
    { "path": "packages/nextjs-adapter" }
  ]
}
